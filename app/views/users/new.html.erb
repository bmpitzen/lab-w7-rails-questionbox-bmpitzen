  <header>
    <nav class="navbar navbar-light bg-light">
    <%= render "nav" %>
    <%= link_to 'Back', root_path, :class => 'btn btn-outline-info' %>
    </nav>
  </header>
  <br>
  <body>
    

<h1 class= "col-md-3">New Account</h1>
<%= form_with scope: :user, url: users_path, local: true do |form| %>

      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2 class="error_title">
            <%= pluralize(@user.errors.count, "error") %> prohibited
            this account registration:
          </h2>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li class="error_message"><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      

      <div class="input-block col-md-3">
        <%= form.text_field :username, :class => 'form-control', :placeholder => 'Username' %>
      </div>
      <br>
      <div class="input-block col-md-3">
        <%= form.password_field :password, :class => 'form-control', :placeholder => 'Password' %>
      </div>
      <br>
      <div class="input-block col-md-3">
        <%= form.submit "Save User", :class => "btn btn-outline-success"%>
      </div>
    <% end %>
  </body>
</html>







